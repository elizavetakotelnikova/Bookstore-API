<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "com.bookstore.app.entities.productFeature.ProductFeature" table = "feature_value">

        <meta attribute = "class-description">
            This class contains user mapping description.
        </meta>

        <id name = "id" type = "java.util.UUID" column = "id">
            <!--<generator class="native"/>-->
        </id>

        <property name = "value" column = "value" type = "string"/>
        <many-to-one name="type" column="feature_type_id" class="com.bookstore.app.entities.productFeature.FeatureType" lazy="false">
        </many-to-one>

    </class>
</hibernate-mapping>