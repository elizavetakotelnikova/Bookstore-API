<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "com.bookstore.app.entities.user.User" table = "users">

        <meta attribute = "class-description">
            This class contains user mapping description.
        </meta>

        <id name = "id" type = "java.util.UUID" column = "id">
            <!--<generator class="native"/>-->
        </id>

        <property name = "phoneNumber" column = "phone_number" type = "string"/>
        <property name = "password" column = "password" type = "byte[]"/>
        <property name = "balance" column = "balance" type = "int"/>
        <property name = "birthday" column = "birthday" type = "java.time.LocalDate"/>

    </class>
</hibernate-mapping>