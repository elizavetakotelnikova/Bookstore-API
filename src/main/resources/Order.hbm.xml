<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "com.bookstore.app.entities.order.Order" table = "orders">

        <meta attribute = "class-description">
            This class contains user mapping description.
        </meta>

        <id name = "id" type = "java.util.UUID" column = "id">
            <!--<generator class="native"/>-->
        </id>

        <property name = "userId" column = "user_id" type = "java.util.UUID"/>
        <property name = "shopId" column = "shop_id" type = "java.util.UUID"/>
        <property name = "orderState" column = "order_state">
            <type name="com.bookstore.app.configuration.PostgreSQLEnumType">
        <param name="enumClass">com.bookstore.app.valueObjects.OrderState</param>
                <param name="useNamed">true</param>
        </type>
        </property>
        <property name = "date" column = "date" type = "java.time.LocalDate"/>
        <bag name="productList" table="order_content" lazy="false">
            <key column="order_id"></key>
            <many-to-many class="com.bookstore.app.entities.product.Product" column="product_id" unique="true" lazy="false" fetch="join"/>
        </bag>

    </class>
</hibernate-mapping>